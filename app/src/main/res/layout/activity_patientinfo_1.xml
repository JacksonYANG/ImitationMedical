<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jcbackground">
    <LinearLayout
        android:layout_weight="82"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </LinearLayout>

    <LinearLayout
        android:layout_weight="518"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="365 "
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="62"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="0dp">
                <EditText
                    android:id="@+id/serchET"
                    android:layout_width="wrap_content"
                    style="@style/search_edittext_style"
                    android:layout_height="wrap_content"
                    android:singleLine="true"/>
                <TextView
                    android:textSize="17dp"
                    android:id="@+id/seachbyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名搜索"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="456"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/namelist"
                    android:layout_marginTop="5dp"
                    android:text="姓名列表"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ListView
                    android:id="@+id/patientList"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="659"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="114"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/patientInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息：null"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="404"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:persistentDrawingCache="animation">
                </android.support.v4.view.ViewPager>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>