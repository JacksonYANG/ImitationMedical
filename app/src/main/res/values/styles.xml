<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- LoginActivity Doctor EditText Style. -->
    <style name="doctor_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:drawableLeft">@drawable/userleft</item>
        <item name="android:background">@drawable/user</item>
    </style>
    <style name="passwd_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:drawableLeft">@drawable/pwdleft</item>
        <item name="android:background">@drawable/pwd</item>
    </style>
    <style name="search_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:drawableLeft">@drawable/searchleft</item>
        <item name="android:background">@drawable/search</item>
    </style>

</resources>
